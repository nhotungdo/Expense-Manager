<script>
    $(document).ready(function () {
        // Check authentication first
        const token = localStorage.getItem('authToken');
        if (!token) {
            window.location.href = '/Login';
            return;
        }

        // Initialize page
        loadUserInfo();
        loadFinancialOverview();
        loadRecentTransactions();
        setCurrentDate();

        // Auto refresh every 5 minutes
        setInterval(() => {
            loadFinancialOverview();
            loadRecentTransactions();
        }, 300000);
    });

    function loadUserInfo() {
        const user = JSON.parse(localStorage.getItem('user') || '{}');

        // Update greeting
        const firstName = user.fullName ? user.fullName.split(' ')[0] : (user.username || 'bạn');
        $('#userGreeting').text(firstName);

        // Update avatar
        if (user.pictureUrl) {
            $('#userAvatar').attr('src', user.pictureUrl).show();
            $('#userAvatarPlaceholder').hide();
        } else {
            const initial = firstName.charAt(0).toUpperCase();
            $('#userAvatarPlaceholder').text(initial);
        }
    }

    function setCurrentDate() {
        const now = new Date();
        const dateOptions = {
            weekday: 'long',
            year: 'numeric',
            month: 'long',
            day: 'numeric'
        };
        const timeOptions = {
            hour: '2-digit',
            minute: '2-digit',
            second: '2-digit',
            hour12: false
        };

        $('#currentDate').text(now.toLocaleDateString('vi-VN', dateOptions));
        $('#currentTime').text(now.toLocaleTimeString('vi-VN', timeOptions));
    }

    function updateRealTime() {
        setCurrentDate();
        // Update weather info (mock data)
        const temps = ['24°C', '25°C', '26°C', '23°C'];
        const randomTemp = temps[Math.floor(Math.random() * temps.length)];
        $('#weatherInfo').text(randomTemp);
    }

    // Update time every second
    setInterval(updateRealTime, 1000);

    async function loadFinancialOverview() {
        try {
            const response = await fetch('/api/dashboard/overview', {
                headers: {
                    'Authorization': 'Bearer ' + localStorage.getItem('authToken')
                }
            });

            if (response.ok) {
                const data = await response.json();

                // Update financial cards
                $('#monthlyIncome').text(formatCurrency(data.monthlyIncome || 0));
                $('#monthlyExpense').text(formatCurrency(data.monthlyExpense || 0));
                $('#currentBalance').text(formatCurrency((data.monthlyIncome || 0) - (data.monthlyExpense || 0)));

                // Calculate savings rate
                const savingsRate = data.monthlyIncome > 0 ?
                    Math.round(((data.monthlyIncome - data.monthlyExpense) / data.monthlyIncome) * 100) : 0;
                $('#savingsRate').text(savingsRate + '%');

                // Update change indicators with proper styling
                updateChangeIndicator('incomeChange', 'incomeChangeContainer', data.incomeChange || 5.2);
                updateChangeIndicator('expenseChange', 'expenseChangeContainer', data.expenseChange || 2.1);
            }
        } catch (error) {
            console.error('Error loading financial overview:', error);
        }
    }

    async function loadRecentTransactions() {
        try {
            const response = await fetch('/api/dashboard/recent-transactions?limit=5', {
                headers: {
                    'Authorization': 'Bearer ' + localStorage.getItem('authToken')
                }
            });

            if (response.ok) {
                const data = await response.json();
                displayRecentTransactions(data);
            }
        } catch (error) {
            console.error('Error loading recent transactions:', error);
            $('#recentTransactions').html(`
            <div class="text-center py-4 text-muted">
                <i class="fas fa-exclamation-triangle me-2"></i>Không thể tải dữ liệu giao dịch
            </div>
        `);
        }
    }

    function displayRecentTransactions(transactions) {
        if (!transactions || transactions.length === 0) {
            $('#recentTransactions').html(`
            <div class="text-center py-4 text-muted">
                <i class="fas fa-inbox me-2"></i>Chưa có giao dịch nào
                <br>
                <small class="mt-2">Hãy bắt đầu bằng cách thêm thu nhập hoặc chi tiêu đầu tiên</small>
            </div>
        `);
            return;
        }

        const transactionHtml = transactions.map(transaction => {
            const isExpense = transaction.type === 'EXPENSE';
            const iconClass = isExpense ? 'fas fa-arrow-down' : 'fas fa-arrow-up';
            const iconBg = isExpense ? 'expense-icon' : 'income-icon';
            const amountClass = isExpense ? 'text-danger' : 'text-success';
            const sign = isExpense ? '-' : '+';

            return `
            <div class="transaction-item">
                <div class="d-flex align-items-center flex-grow-1">
                    <div class="transaction-icon ${iconBg}">
                        <i class="${iconClass}"></i>
                    </div>
                    <div class="flex-grow-1">
                        <h6 class="mb-1">${transaction.categoryName || 'Khác'}</h6>
                        <small class="text-muted">
                            <i class="fas fa-calendar me-1"></i>
                            ${formatDate(transaction.date)}
                            ${transaction.note ? `• ${transaction.note}` : ''}
                        </small>
                    </div>
                    <div class="text-end">
                        <span class="fw-bold ${amountClass}">
                            ${sign}${formatCurrency(transaction.amount)}
                        </span>
                    </div>
                </div>
            </div>
        `;
        }).join('');

        $('#recentTransactions').html(transactionHtml);
    }

    function formatCurrency(amount) {
        return new Intl.NumberFormat('vi-VN', {
            style: 'currency',
            currency: 'VND',
            minimumFractionDigits: 0,
            maximumFractionDigits: 0
        }).format(amount);
    }

    function formatDate(dateString) {
        const date = new Date(dateString);
        return date.toLocaleDateString('vi-VN', {
            day: '2-digit',
            month: '2-digit'
        });
    }

    function updateChangeIndicator(textId, containerId, changeValue) {
        const isPositive = changeValue > 0;
        const container = $('#' + containerId);
        const text = $('#' + textId);

        // Update text
        text.text((isPositive ? '+' : '') + changeValue.toFixed(1) + '%');

        // Update styling
        container.removeClass('positive negative');
        container.addClass(isPositive ? 'positive' : 'negative');

        // Update icon
        const icon = container.find('i');
        icon.removeClass('fa-arrow-up fa-arrow-down');
        icon.addClass(isPositive ? 'fa-arrow-up' : 'fa-arrow-down');
    }

    function addLoadingState() {
        $('.stats-card').addClass('loading-skeleton');
        $('.recent-transactions').addClass('loading-skeleton');
    }

    function removeLoadingState() {
        $('.stats-card').removeClass('loading-skeleton');
        $('.recent-transactions').removeClass('loading-skeleton');
    }

    function refreshTransactions() {
        // Add loading animation to button
        const btn = event.target.closest('button');
        const originalHtml = btn.innerHTML;
        btn.innerHTML = '<i class="fas fa-spinner fa-spin me-1"></i>Đang tải...';
        btn.disabled = true;

        // Reload transactions
        loadRecentTransactions().finally(() => {
            setTimeout(() => {
                btn.innerHTML = originalHtml;
                btn.disabled = false;
            }, 1000);
        });
    }

    // Enhanced notification system
    function showNotification(type, title, message) {
        const notification = $(`
            <div class="notification-toast position-fixed top-0 end-0 m-3" style="z-index: 9999;">
                <div class="toast show" role="alert">
                    <div class="toast-header bg-${type} text-white">
                        <i class="fas fa-${type === 'success' ? 'check-circle' : type === 'warning' ? 'exclamation-triangle' : 'info-circle'} me-2"></i>
                        <strong class="me-auto">${title}</strong>
                        <button type="button" class="btn-close btn-close-white" data-bs-dismiss="toast"></button>
                    </div>
                    <div class="toast-body">
                        ${message}
                    </div>
                </div>
            </div>
        `);

        $('body').append(notification);

        setTimeout(() => {
            notification.fadeOut(() => notification.remove());
        }, 5000);
    }
</script>
