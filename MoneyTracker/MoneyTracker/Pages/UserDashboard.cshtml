@page
@model MoneyTracker.Pages.UserDashboardModel
@{
    ViewData["Title"] = "Dashboard - Money Tracking";
}

@section Styles {
    <link rel="stylesheet" href="~/css/user-dashboard.css" asp-append-version="true" />
}

<div class="user-dashboard-container">
    <!-- Left Sidebar -->
    <div class="sidebar">
        <div class="sidebar-header">
            <h2 class="logo">Money Tracking</h2>
        </div>
        <nav class="sidebar-nav">
            <ul class="nav-list">
                <li class="nav-item active">
                    <a href="/UserDashboard" class="nav-link">
                        <i class="fas fa-th-large"></i>
                        <span>Dashboard</span>
                    </a>
                </li>
                <li class="nav-item">
                    <a href="/Expenses" class="nav-link">
                        <i class="fas fa-credit-card"></i>
                        <span>Chi tiêu</span>
                    </a>
                </li>
                <li class="nav-item">
                    <a href="/Incomes" class="nav-link">
                        <i class="fas fa-arrow-up"></i>
                        <span>Thu nhập</span>
                    </a>
                </li>
                <li class="nav-item">
                    <a href="/Categories" class="nav-link">
                        <i class="fas fa-tags"></i>
                        <span>Danh mục</span>
                    </a>
                </li>
                <li class="nav-item">
                    <a href="/AiSuggestions" class="nav-link">
                        <i class="fas fa-robot"></i>
                        <span>Gợi ý AI</span>
                    </a>
                </li>
                <li class="nav-item">
                    <a href="/Profile" class="nav-link">
                        <i class="fas fa-user"></i>
                        <span>Hồ sơ</span>
                    </a>
                </li>
            </ul>
        </nav>
    </div>

    <!-- Main Content -->
    <div class="main-content">
        <!-- Top Navigation Bar -->
        <div class="top-nav">
            <div class="search-container">
                <i class="fas fa-search search-icon"></i>
                <input type="text" placeholder="Tìm kiếm giao dịch..." class="search-input">
            </div>
            <div class="top-nav-actions">
                <button class="nav-action-btn">
                    <i class="fas fa-bell"></i>
                </button>
                <button class="nav-action-btn">
                    <i class="fas fa-cog"></i>
                </button>
                <div class="user-profile">
                    <div class="user-avatar">U</div>
                    <i class="fas fa-chevron-down"></i>
                </div>
            </div>
        </div>

        <!-- Dashboard Content -->
        <div class="dashboard-content">
            <!-- Balance Card -->
            <div class="balance-card">
                <div class="balance-content">
                    <div class="balance-info">
                        <h3 class="balance-title">Số dư của bạn</h3>
                        <div class="balance-amount" id="currentBalance">14.231.000 ₫</div>
                    </div>
                    <div class="balance-actions">
                        <button class="balance-btn">
                            <i class="fas fa-wallet"></i>
                            Ví
                        </button>
                        <button class="balance-btn">
                            <i class="fas fa-plus"></i>
                            Thêm tiền
                        </button>
                    </div>
                </div>
                <div class="balance-waves">
                    <svg viewBox="0 0 1200 120" preserveAspectRatio="none">
                        <path d="M0,0V46.29c47.79,22.2,103.59,32.17,158,28,70.36-5.37,136.33-33.31,206.8-37.5C438.64,32.43,512.34,53.67,583,72.05c69.27,18,138.3,24.88,209.4,13.08,36.15-6,69.85-17.84,104.45-29.34C989.49,25,1113-14.29,1200,52.47V0Z" opacity=".25" fill="currentColor"></path>
                        <path d="M0,0V15.81C13,36.92,27.64,56.86,47.69,72.05,99.41,111.27,165,111,224.58,91.58c31.15-10.15,60.09-26.07,89.67-39.8,40.92-19,84.73-46,130.83-49.67,36.26-2.85,70.9,9.42,98.6,31.56,31.77,25.39,62.32,62,103.63,73,40.44,10.79,81.35-6.69,119.13-24.28s75.16-39,116.92-43.05c59.73-5.85,113.28,22.88,168.9,38.84,30.2,8.66,59,6.17,87.09-7.5,22.43-10.89,48-26.93,60.65-49.24V0Z" opacity=".5" fill="currentColor"></path>
                        <path d="M0,0V5.63C149.93,59,314.09,71.32,475.83,42.57c43-7.64,84.23-20.12,127.61-26.46,59-8.63,112.48,12.24,165.56,35.4C827.93,77.22,886,95.24,951.2,90c86.53-7,172.46-45.71,248.8-84.81V0Z" fill="currentColor"></path>
                    </svg>
                </div>
            </div>

            <!-- Summary Cards -->
            <div class="summary-cards">
                <div class="summary-card income-card">
                    <div class="card-icon income-icon">
                        <i class="fas fa-arrow-up"></i>
                    </div>
                    <div class="card-amount">8.500.000 ₫</div>
                    <div class="card-label">Thu nhập tháng này</div>
                </div>
                <div class="summary-card expense-card">
                    <div class="card-icon expense-icon">
                        <i class="fas fa-arrow-down"></i>
                    </div>
                    <div class="card-amount">6.200.000 ₫</div>
                    <div class="card-label">Chi tiêu tháng này</div>
                </div>
                <div class="summary-card savings-card">
                    <div class="card-icon savings-icon">
                        <i class="fas fa-piggy-bank"></i>
                    </div>
                    <div class="card-amount">2.300.000 ₫</div>
                    <div class="card-label">Tiết kiệm</div>
                </div>
            </div>

            <!-- Bottom Section -->
            <div class="bottom-section">
                <!-- Recent Transactions -->
                <div class="recent-transactions">
                    <div class="section-header">
                        <div class="section-title">
                            <h3>Giao dịch gần đây</h3>
                            <span class="transaction-count">5 giao dịch</span>
                        </div>
                        <button class="view-all-btn">
                            Xem tất cả
                            <i class="fas fa-arrow-right"></i>
                        </button>
                    </div>
                    <div class="transaction-list">
                        <div class="transaction-item">
                            <div class="transaction-icon income">
                                <i class="fas fa-arrow-up"></i>
                            </div>
                            <div class="transaction-info">
                                <div class="transaction-name">Lương tháng 1</div>
                                <div class="transaction-category">Thu nhập</div>
                            </div>
                            <div class="transaction-amount income">+15.000.000 ₫</div>
                        </div>
                        <div class="transaction-item">
                            <div class="transaction-icon expense">
                                <i class="fas fa-arrow-down"></i>
                            </div>
                            <div class="transaction-info">
                                <div class="transaction-name">Mua sắm</div>
                                <div class="transaction-category">Chi tiêu</div>
                            </div>
                            <div class="transaction-amount expense">-2.500.000 ₫</div>
                        </div>
                        <div class="transaction-item">
                            <div class="transaction-icon expense">
                                <i class="fas fa-arrow-down"></i>
                            </div>
                            <div class="transaction-info">
                                <div class="transaction-name">Ăn uống</div>
                                <div class="transaction-category">Chi tiêu</div>
                            </div>
                            <div class="transaction-amount expense">-1.200.000 ₫</div>
                        </div>
                        <div class="transaction-item">
                            <div class="transaction-icon expense">
                                <i class="fas fa-arrow-down"></i>
                            </div>
                            <div class="transaction-info">
                                <div class="transaction-name">Xăng xe</div>
                                <div class="transaction-category">Chi tiêu</div>
                            </div>
                            <div class="transaction-amount expense">-800.000 ₫</div>
                        </div>
                        <div class="transaction-item">
                            <div class="transaction-icon income">
                                <i class="fas fa-arrow-up"></i>
                            </div>
                            <div class="transaction-info">
                                <div class="transaction-name">Thưởng</div>
                                <div class="transaction-category">Thu nhập</div>
                            </div>
                            <div class="transaction-amount income">+3.000.000 ₫</div>
                        </div>
                    </div>
                </div>

                <!-- Quick Actions -->
                <div class="quick-actions">
                    <div class="section-header">
                        <div class="section-title">
                            <h3>Thao tác nhanh</h3>
                        </div>
                    </div>
                    <div class="actions-grid">
                        <button class="action-btn income-btn">
                            <i class="fas fa-plus"></i>
                            <span>Thêm thu nhập</span>
                        </button>
                        <button class="action-btn expense-btn">
                            <i class="fas fa-minus"></i>
                            <span>Thêm chi tiêu</span>
                        </button>
                        <button class="action-btn transfer-btn">
                            <i class="fas fa-exchange-alt"></i>
                            <span>Chuyển tiền</span>
                        </button>
                        <button class="action-btn report-btn">
                            <i class="fas fa-chart-pie"></i>
                            <span>Báo cáo</span>
                        </button>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        // Load user dashboard data
        async function loadUserDashboardData() {
            try {
                // Mock data for demo
                const mockData = {
                    balance: 14231000,
                    monthlyIncome: 8500000,
                    monthlyExpense: 6200000,
                    savings: 2300000
                };
                updateUserDashboardUI(mockData);
            } catch (error) {
                console.error('Error loading user dashboard data:', error);
            }
        }

        function updateUserDashboardUI(data) {
            // Update balance
            document.getElementById('currentBalance').textContent = formatCurrency(data.balance);
        }

        function formatCurrency(amount) {
            return new Intl.NumberFormat('vi-VN', {
                style: 'currency',
                currency: 'VND',
                minimumFractionDigits: 0,
                maximumFractionDigits: 0
            }).format(amount);
        }

        // Initialize dashboard
        $(document).ready(function () {
            loadUserDashboardData();
        });
    </script>
}
