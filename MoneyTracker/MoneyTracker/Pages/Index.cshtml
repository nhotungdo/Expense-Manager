@page
@model MoneyTracker.Pages.IndexModel
@{
    ViewData["Title"] = "MoneyTracker - Quản Lý Tài Chính Thông Minh";
    Layout = null;
}

<!DOCTYPE html>
<html lang="vi">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"]</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css" rel="stylesheet">
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@300;400;500;600;700&display=swap" rel="stylesheet">
    <style>
        :root {
            --primary-color: #2563eb;
            --gradient-primary: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
        }

        body {
            font-family: 'Inter', sans-serif;
            padding-top: 76px;
        }

        .hero-section {
            min-height: 90vh;
            background: var(--gradient-primary);
            color: white;
            display: flex;
            align-items: center;
        }

        .hero-title {
            font-size: 3.5rem;
            font-weight: 700;
            margin-bottom: 1.5rem;
        }

        .btn-hero {
            padding: 15px 40px;
            font-size: 1.1rem;
            font-weight: 600;
            border-radius: 50px;
            text-decoration: none;
            display: inline-flex;
            align-items: center;
            gap: 10px;
            transition: all 0.3s ease;
            border: none;
        }

        .btn-primary-hero {
            background: white;
            color: var(--primary-color);
        }

        .preview-card {
            border: none;
            border-radius: 15px;
            box-shadow: 0 10px 30px rgba(0, 0, 0, 0.1);
            transition: all 0.3s ease;
        }

        .preview-card:hover {
            transform: translateY(-5px);
        }

        @@media (max-width: 768px) {
            .hero-title { font-size: 2.5rem; }
        }
    </style>
</head>
<body>
    <!-- Navigation -->
    <nav class="navbar navbar-expand-lg fixed-top shadow-sm" style="background: rgba(255, 255, 255, 0.95);">
        <div class="container">
            <a class="navbar-brand fw-bold text-primary" href="#home">
                <i class="fas fa-wallet me-2"></i>MoneyTracker
            </a>
            <div class="d-flex gap-3">
                <a href="#demo" class="btn btn-outline-primary">Demo</a>
                <a href="/Login" class="btn btn-primary">
                    <i class="fab fa-google me-2"></i>Đăng nhập
                </a>
            </div>
        </div>
    </nav>

    <!-- Hero Section -->
    <section class="hero-section" id="home">
        <div class="container">
            <div class="row align-items-center">
                <div class="col-lg-6">
                    <h1 class="hero-title">Quản lý tài chính thông minh với AI</h1>
                    <p class="fs-5 mb-4 opacity-75">
                        Khám phá hệ thống quản lý tài chính hoàn chỉnh với Dashboard, Chi tiêu, Thu nhập, Danh mục và AI thông minh.
                    </p>
                    <div class="d-flex flex-wrap gap-3 mb-4">
                        <a href="/Login" class="btn-hero btn-primary-hero">
                            <i class="fab fa-google"></i>
                            Bắt đầu với Google
                        </a>
                        <a href="#demo" class="btn-hero" style="background: transparent; color: white; border: 2px solid rgba(255, 255, 255, 0.3);">
                            <i class="fas fa-play"></i>
                            Xem Demo
                        </a>
                    </div>
                </div>
                <div class="col-lg-6">
                    <div style="background: rgba(255, 255, 255, 0.1); border-radius: 20px; padding: 2rem; backdrop-filter: blur(10px);">
                        <h4 class="mb-3"><i class="fas fa-chart-pie me-2"></i>Dashboard Preview</h4>
                        <div class="row g-2 mb-3">
                            <div class="col-6">
                                <div style="background: rgba(255, 255, 255, 0.1); padding: 1rem; border-radius: 12px; text-align: center;">
                                    <div class="fs-5 fw-bold text-success">25.5M ₫</div>
                                    <small>Thu nhập</small>
                                </div>
                            </div>
                            <div class="col-6">
                                <div style="background: rgba(255, 255, 255, 0.1); padding: 1rem; border-radius: 12px; text-align: center;">
                                    <div class="fs-5 fw-bold text-danger">18.7M ₫</div>
                                    <small>Chi tiêu</small>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>

    <!-- Interactive Demo Section -->
    <section class="py-5" id="demo">
        <div class="container">
            <div class="row mb-5">
                <div class="col-12 text-center">
                    <h2 class="display-5 fw-bold mb-3">Trải nghiệm hệ thống</h2>
                    <p class="lead text-muted">Khám phá giao diện và chức năng của từng module</p>
                </div>
            </div>
            
            <!-- Feature Tabs -->
            <ul class="nav nav-pills nav-fill mb-4" id="featureTabs">
                <li class="nav-item">
                    <button class="nav-link active" data-bs-toggle="pill" data-bs-target="#dashboard-preview">
                        <i class="fas fa-chart-line me-2"></i>Dashboard
                    </button>
                </li>
                <li class="nav-item">
                    <button class="nav-link" data-bs-toggle="pill" data-bs-target="#expenses-preview">
                        <i class="fas fa-wallet me-2"></i>Chi Tiêu
                    </button>
                </li>
                <li class="nav-item">
                    <button class="nav-link" data-bs-toggle="pill" data-bs-target="#incomes-preview">
                        <i class="fas fa-coins me-2"></i>Thu Nhập
                    </button>
                </li>
                <li class="nav-item">
                    <button class="nav-link" data-bs-toggle="pill" data-bs-target="#categories-preview">
                        <i class="fas fa-tags me-2"></i>Danh Mục
                    </button>
                </li>
            </ul>

            <!-- Tab Content -->
            <div class="tab-content">
                <!-- Dashboard Preview -->
                <div class="tab-pane fade show active" id="dashboard-preview">
