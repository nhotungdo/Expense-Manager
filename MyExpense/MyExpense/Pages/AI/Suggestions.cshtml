@page
@model MyExpense.Pages.AI.SuggestionsModel
@attribute [Microsoft.AspNetCore.Authorization.Authorize]
@{
    ViewData["Title"] = "AI Gợi ý";
}

<h2>Gợi ý tiết kiệm & Phân loại</h2>

<form method="post" class="row g-2 mb-3">
    <div class="col-md-6">
        <label class="form-label">Ghi chú chi tiêu</label>
        <input asp-for="Note" class="form-control" placeholder="ví dụ: mua cà phê" />
    </div>
    <div class="col-md-3 align-self-end">
        <button class="btn btn-primary" type="submit" name="action" value="classify">Phân loại</button>
    </div>
    <div class="col-12">
        <div class="alert alert-info" role="alert" hidden="@(string.IsNullOrEmpty(Model.Classification))">
            Gợi ý danh mục: <strong>@Model.Classification</strong>
        </div>
    </div>
</form>

<div class="card p-3">
    <div class="text-muted">Gợi ý tiết kiệm</div>
    <ul class="mb-0">
@foreach (var s in Model.SavingTips)
{
        <li>@s</li>
}
    </ul>
</div>


