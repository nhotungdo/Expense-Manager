@page "{id:long}"
@model MyExpense.Pages.Incomes.DeleteModel
@attribute [Microsoft.AspNetCore.Authorization.Authorize]
@{
    ViewData["Title"] = "Xóa thu nhập";
}

<h2>Xóa thu nhập</h2>

<div class="alert alert-warning">
    Bạn có chắc muốn xóa bản ghi này?
    <div class="mt-2">
        <strong>@Model.Item?.IncomeDate.ToString("yyyy-MM-dd")</strong> · @Model.Item?.Amount.ToString("N2") @Model.Item?.Currency · @Model.Item?.Note
    </div>
    <form method="post" class="mt-3">
        <button class="btn btn-danger" type="submit">Xóa</button>
        <a class="btn btn-outline-secondary" href="/Incomes">Hủy</a>
    </form>
</div>


