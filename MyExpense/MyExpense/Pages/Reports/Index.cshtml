@page
@model MyExpense.Pages.Reports.IndexModel
@attribute [Microsoft.AspNetCore.Authorization.Authorize]
@{
    ViewData["Title"] = "Báo cáo";
}

<h2 class="mb-3">Báo cáo</h2>

<form method="get" class="row g-2 mb-3">
    <div class="col-auto">
        <label class="form-label">Từ</label>
        <input type="date" class="form-control" name="from" value="@Model.FromStr" />
    </div>
    <div class="col-auto">
        <label class="form-label">Đến</label>
        <input type="date" class="form-control" name="to" value="@Model.ToStr" />
    </div>
    <div class="col-auto align-self-end">
        <button class="btn btn-secondary" type="submit">Lọc</button>
    </div>
</form>

<div class="row g-3">
    <div class="col-md-4">
        <div class="card p-3">
            <div class="text-muted">Tổng chi tiêu</div>
            <div class="fs-4">@Model.TotalExpense.ToString("N2") @Model.Currency</div>
        </div>
    </div>
    <div class="col-md-4">
        <div class="card p-3">
            <div class="text-muted">Tổng thu nhập</div>
            <div class="fs-4">@Model.TotalIncome.ToString("N2") @Model.Currency</div>
        </div>
    </div>
    <div class="col-md-4">
        <div class="card p-3">
            <div class="text-muted">Cân đối</div>
            <div class="fs-4">@Model.Balance.ToString("N2") @Model.Currency</div>
        </div>
    </div>
</div>

<h4 class="mt-4">Theo @Model.GroupLabel</h4>
<table class="table table-sm">
    <thead>
        <tr>
            <th>Nhóm</th>
            <th class="text-end">Chi tiêu</th>
            <th class="text-end">Thu nhập</th>
        </tr>
    </thead>
    <tbody>
@foreach (var r in Model.Rows)
{
        <tr>
            <td>@r.Label</td>
            <td class="text-end">@r.Expense.ToString("N2")</td>
            <td class="text-end">@r.Income.ToString("N2")</td>
        </tr>
}
    </tbody>
</table>


