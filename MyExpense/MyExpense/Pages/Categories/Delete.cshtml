@page "{id:long}"
@model MyExpense.Pages.Categories.DeleteModel
@attribute [Microsoft.AspNetCore.Authorization.Authorize]
@{
    ViewData["Title"] = "Xóa danh mục";
}

<h2>Xóa danh mục</h2>

<div class="alert alert-warning">
    Bạn có chắc muốn xóa danh mục: <strong>@Model.Item?.Name</strong> (@Model.Item?.Type) ?
    <form method="post" class="mt-3">
        <button class="btn btn-danger" type="submit">Xóa</button>
        <a class="btn btn-outline-secondary" href="/Categories">Hủy</a>
    </form>
</div>


