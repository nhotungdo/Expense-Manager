@page "/Categories"
@model MyExpense.Pages.Categories.IndexModel
@attribute [Microsoft.AspNetCore.Authorization.Authorize]
@{
    ViewData["Title"] = "Danh mục";
}

<h2 class="mb-3">Danh mục</h2>

<div class="mb-3">
    <a class="btn btn-primary" href="/Categories/Create">Thêm danh mục</a>
    <span class="ms-2 text-muted small">Dùng chung = hệ thống (UserId trống), Riêng = của bạn</span>
}</div>

<table class="table table-striped">
    <thead>
        <tr>
            <th>Tên</th>
            <th>Loại</th>
            <th>Phạm vi</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var c in Model.Items)
{
        <tr>
            <td>@c.Name</td>
            <td>@c.Type</td>
            <td>@(c.UserId == null ? "Dùng chung" : "Riêng")</td>
            <td class="text-nowrap">
                <a class="btn btn-sm btn-outline-primary" href="/Categories/Edit/@c.Id">Sửa</a>
                <a class="btn btn-sm btn-outline-danger" href="/Categories/Delete/@c.Id">Xóa</a>
            </td>
        </tr>
}
    </tbody>
}</table>


