@page
@{
    ViewData["Title"] = "Home";
}

<section class="py-5 text-center bg-light rounded-3 mb-4">
    <div class="container">
        <h1 class="display-5 fw-bold mb-2">MyExpense</h1>
        <p class="lead text-muted mb-4">Ứng dụng quản lý chi tiêu cá nhân: theo dõi thu/chi, danh mục, báo cáo và gợi ý thông minh.</p>
        @if (!User.Identity?.IsAuthenticated ?? true)
        {
            <a class="btn btn-primary btn-lg px-4" href="/account/login">Đăng nhập với Google</a>
        }
        else
        {
            <a class="btn btn-primary btn-lg px-4 me-2" href="/Expenses">Bắt đầu ghi chi tiêu</a>
            <a class="btn btn-outline-secondary btn-lg px-4" href="/Reports">Xem báo cáo</a>
        }
    </div>
}</section>

<section class="container">
    <div class="row g-4">
        <div class="col-md-4">
            <div class="card h-100 shadow-sm">
                <div class="card-body">
                    <h5 class="card-title">Theo dõi chi tiêu</h5>
                    <p class="card-text text-muted">Ghi lại chi phí theo ngày, số tiền, danh mục, ghi chú và đính kèm hóa đơn.</p>
                    <a href="/Expenses" class="card-link">Quản lý chi tiêu</a>
                </div>
            </div>
        </div>
        <div class="col-md-4">
            <div class="card h-100 shadow-sm">
                <div class="card-body">
                    <h5 class="card-title">Quản lý thu nhập</h5>
                    <p class="card-text text-muted">Theo dõi các nguồn thu, phân loại và tổng hợp nhanh.</p>
                    <a href="/Incomes" class="card-link">Quản lý thu nhập</a>
                </div>
            </div>
        </div>
        <div class="col-md-4">
            <div class="card h-100 shadow-sm">
                <div class="card-body">
                    <h5 class="card-title">Danh mục linh hoạt</h5>
                    <p class="card-text text-muted">Tạo danh mục EXPENSE/INCOME riêng, hoặc dùng danh mục hệ thống.</p>
                    <a href="/Categories" class="card-link">Quản lý danh mục</a>
                </div>
            </div>
        </div>
        <div class="col-md-4">
            <div class="card h-100 shadow-sm">
                <div class="card-body">
                    <h5 class="card-title">Báo cáo & biểu đồ</h5>
                    <p class="card-text text-muted">Tổng hợp theo ngày/tháng/năm, cân đối thu-chi, biểu đồ trực quan.</p>
                    <a href="/Reports" class="card-link">Mở báo cáo</a>
                </div>
            </div>
        </div>
        <div class="col-md-4">
            <div class="card h-100 shadow-sm">
                <div class="card-body">
                    <h5 class="card-title">Gợi ý thông minh</h5>
                    <p class="card-text text-muted">Gợi ý tiết kiệm, phân loại từ ghi chú, chatbot giải đáp chi tiêu.</p>
                    <a href="/AI/Suggestions" class="card-link">Khám phá AI</a>
                </div>
            </div>
        </div>
        <div class="col-md-4">
            <div class="card h-100 shadow-sm">
                <div class="card-body">
                    <h5 class="card-title">Hồ sơ & bảo mật</h5>
                    <p class="card-text text-muted">Cập nhật thông tin, đăng xuất an toàn, phân quyền Admin/User.</p>
                    <a href="/Account/Profile" class="card-link">Hồ sơ của bạn</a>
                </div>
            </div>
        </div>
    </div>
}</section>
