@page
@model MyExpense.Pages.Account.LoginModel
@{
    ViewData["Title"] = "Login";
}

<div class="d-flex align-items-center justify-content-center" style="min-height: 80vh;">
    <div class="card shadow-sm" style="max-width: 420px; width: 100%;">
        <div class="card-body p-4">
            <h4 class="text-center mb-4">Login</h4>

            <form method="post" novalidate>
                <div class="mb-3">
                    <input asp-for="Email" type="email" class="form-control" placeholder="you@example.com" required />
                    <span asp-validation-for="Email" class="text-danger small"></span>
                </div>

                <div class="mb-3">
                    <input asp-for="Code" type="text" class="form-control" placeholder="123456" />
                    <small class="text-muted">Nhập mã OTP nếu bạn đã nhận.</small>
                </div>

                <button class="btn btn-teal w-100" type="submit">Login</button>
            </form>

            <div class="d-flex align-items-center my-3">
                <hr class="flex-grow-1" />
                <span class="px-2 text-muted">OR</span>
                <hr class="flex-grow-1" />
            </div>

            <a class="btn btn-outline-secondary w-100 mb-2" href="#">Authenticate with a password</a>

            <a class="btn btn-outline-dark w-100 d-flex align-items-center justify-content-center" href="/account/google">
                <svg xmlns="http://www.w3.org/2000/svg" width="18" height="18" viewBox="0 0 48 48" class="me-2"><path fill="#FFC107" d="M43.611 20.083H42V20H24v8h11.303C33.602 31.91 29.28 35 24 35c-7.18 0-13-5.82-13-13s5.82-13 13-13c3.313 0 6.313 1.267 8.573 3.327l5.657-5.657C34.943 3.053 29.74 1 24 1 11.85 1 2 10.85 2 23s9.85 22 22 22s22-9.85 22-22c0-1.467-.153-2.9-.389-4.917z"/><path fill="#FF3D00" d="M6.306 14.691l6.571 4.817C14.655 16.053 18.961 13 24 13c3.313 0 6.313 1.267 8.573 3.327l5.657-5.657C34.943 3.053 29.74 1 24 1 16.318 1 9.592 5.337 6.306 14.691z"/><path fill="#4CAF50" d="M24 45c5.185 0 9.86-1.977 13.409-5.191l-6.191-5.238C29.953 36.848 27.104 38 24 38c-5.246 0-9.609-3.317-11.209-7.946l-6.455 4.977C9.574 42.67 16.227 45 24 45z"/><path fill="#1976D2" d="M43.611 20.083H42V20H24v8h11.303c-1.04 3.027-3.243 5.659-6.095 7.077l.004-.002l6.191 5.238C33.091 41.68 38 38 38 38c3.467-3.2 5.611-7.907 5.611-13.917c0-1.467-.153-2.9-.389-4.917z"/></svg>
                Đăng nhập với Google
            </a>

            <p class="text-center text-muted mt-3" style="font-size: 0.9rem;">By login, you accept our <a href="#">Terms of use</a> & <a href="#">Privacy policy</a></p>

            <p class="text-center mt-3">Chưa có tài khoản? <a href="/Account/Register">Create an account</a></p>
        </div>
    </div>
</div>

<div class="cookie-banner border-top bg-white position-fixed bottom-0 start-0 end-0 py-3">
    <div class="container d-flex flex-column flex-md-row align-items-center justify-content-between gap-2">
        <span class="text-muted">We are proud to say that we do not use any cookies.</span>
        <div>
            <a class="btn btn-outline-secondary btn-sm me-2" href="#">Contact us</a>
            <button class="btn btn-teal btn-sm" type="button" onclick="document.querySelector('.cookie-banner').remove()">Got it</button>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
    <script>
        // No JS needed beyond closing the cookie banner.
    </script>
}

<style>
    .btn-teal { background-color: #0f8f86; color: #fff; }
    .btn-teal:hover { background-color: #0c726b; color: #fff; }
    .card { border-radius: 12px; }
    input.form-control { padding: 10px 12px; }
    .cookie-banner { z-index: 1040; }
    hr { opacity: .15; }
}</style>


