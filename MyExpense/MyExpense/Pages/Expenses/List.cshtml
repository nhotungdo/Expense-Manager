@page "/Expenses"
@model MyExpense.Pages.Expenses.IndexModel
@attribute [Microsoft.AspNetCore.Authorization.Authorize]
@{
    ViewData["Title"] = "Chi tiêu";
}

<h2 class="mb-3">Chi tiêu</h2>

<form method="get" class="row g-2 mb-3">
    <div class="col-auto">
        <input type="date" class="form-control" name="from" value="@Model.FromStr" />
    </div>
    <div class="col-auto">
        <input type="date" class="form-control" name="to" value="@Model.ToStr" />
    </div>
    <div class="col-auto">
        <button class="btn btn-secondary" type="submit">Lọc</button>
        <a class="btn btn-outline-secondary" href="/Expenses">Reset</a>
    </div>
    <div class="col text-end">
        <a class="btn btn-primary" href="/Expenses/Create">Thêm chi tiêu</a>
    </div>
    <div class="col-12 text-muted small">Tổng: <strong>@Model.TotalAmount.ToString("N2")</strong> @Model.Currency</div>
    
</form>

<table class="table table-striped">
    <thead>
        <tr>
            <th>Ngày</th>
            <th>Danh mục</th>
            <th class="text-end">Số tiền</th>
            <th>Ghi chú</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var e in Model.Items)
{
        <tr>
            <td>@e.ExpenseDate.ToString("yyyy-MM-dd")</td>
            <td>@(e.Category?.Name ?? "-")</td>
            <td class="text-end">@e.Amount.ToString("N2") @e.Currency</td>
            <td>@e.Note</td>
            <td class="text-nowrap">
                <a class="btn btn-sm btn-outline-primary" href="/Expenses/Edit/@e.Id">Sửa</a>
                <a class="btn btn-sm btn-outline-danger" href="/Expenses/Delete/@e.Id">Xóa</a>
            </td>
        </tr>
}
    </tbody>
}</table>


